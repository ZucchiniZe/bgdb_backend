<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Min players</th>
      <th>Max players</th>
      <th>Difficulty</th>
      <th>Avg. Length (Min)</th>
      <th>Description</th>
      <th>Genre</th>
      <th>Mechanics</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.min_players %></td>
        <td><%= game.max_players %></td>
        <td><%= game.difficulty %></td>
        <td><%= game.avg_length_min %></td>
        <td><%= game.description %></td>
        <td><%= game.genre %></td>
        <td><%= game.mechanics %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'JSON', game_path(game, :format => :json) %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

